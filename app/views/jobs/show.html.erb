Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %>

<br>

Category: <%= @job.category.nil? ? "None assigned" : @job.category.title %>

<p> <%= link_to "Edit", edit_company_job_path(@job.company, @job) %> </p>
<p> <%= link_to "Delete", company_job_path, method: "delete" %> </p>
<p> <%= link_to "All Jobs", company_jobs_path %> </p>

<%= render partial: 'comments/form' %>

<% @job.comments.reverse_order.each do |comment| %>
<p> <strong> Comment: </strong> <%= comment.body %> </p>
<p> <strong> Created at: </strong> <%= comment.created_at %> </p>
<p> <strong> Updated at: </strong> <%= comment.updated_at %> </p>
<br>
<% end %>
